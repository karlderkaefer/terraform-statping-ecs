[
  {
    "name": "nginx",
    "image": "peterpanne/ecs-nginx:0.0.4",
    "cpu": "${nginx_cpu}",
    "memory": "${nginx_memory}",
    "networkMode": "awsvpc",
    "environment": [
      {
        "name": "STATPING_SERVER",
        "value": "http://localhost:8080/"
      }
    ],
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      },
      {
        "containerPort": 443,
        "hostPort": 443
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${awslogs_group}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "nginx-${app_name}"
      }
    }
  },
  {
    "name": "${app_name}",
    "image": "${app_image}:${app_tag}",
    "cpu": "${statping_cpu}",
    "memory": "${statping_memory}",
    "networkMode": "awsvpc",
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 8080
      }
    ],
    "environment": ${app_configuration},
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${awslogs_group}",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "${app_name}"
      }
    },
    "mountPoints" : [
      {
        "containerPath" : "/app",
        "sourceVolume" : "${cluster_name}-${app_name}"
      }
    ]
  }

]
